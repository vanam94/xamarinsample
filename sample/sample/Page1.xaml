<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sample.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Enter your numbers and click the button" />
            <Entry x:Name="firstNumberEntry" Placeholder="Enter your firstnumber"/>
            <Entry x:Name="secondNumberEntry" Placeholder="Enter your secondnumber"/>
            <Button x:Name="interactionButton"
          Text="Add these number"
          Clicked="interactionButton_Clicked"/>

            <Label x:Name="resultLabel" Text=""/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>